<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
        <h4 class="modal-title">Update Material</h4>
    </div>
    <div class="modal-body">
        @if (Model != null)
        {
            <div class="form-group">
                <label>Material code<code>(*)</code></label>
                <input type="text" class="form-control" id="MaterialCodeUp" name="MaterialCodeUp" placeholder="Material code" value="@Model.MaterialCode" readonly>
            </div>
            <div class="form-group">
                <label>Material name<code>(*)</code></label>
                <input type="text" class="form-control" id="MaterialNameUp" name="MaterialNameUp" placeholder="Material name" value="@Model.MaterialName">
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" id="isActiveUp" name="isActiveUp" @(Model.IsActive == true ? "checked" : "")> Active
                </label>
            </div>
        }
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="MaterialUp('@Model.MaterialCode')">Save changes</button>
    </div>
</div>