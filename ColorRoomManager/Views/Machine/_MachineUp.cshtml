

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
        <h4 class="modal-title">Cập nhật machine</h4>
    </div>
    <div class="modal-body">
        @if (Model != null)
        {
            <div class="form-group">
                <label>Machine code<code>(*)</code></label>
                <input type="text" class="form-control" id="MachineCodeUp" name="MachineCodeUp" placeholder="Machine code" value="@Model.Id" readonly>
            </div>
            <div class="form-group">
                <label>Color name<code>(*)</code></label>
                <input type="text" class="form-control" id="MachineNameUp" name="MachineNameUp" placeholder="Machine name" value="@Model.MachineName">
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" id="isActiveUp" name="isActiveUp" @(Model.IsActive==true? "checked": "")> Active
                </label>
            </div>
        }
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="MachineUp('@Model.Id')">Save changes</button>
    </div>
</div>

