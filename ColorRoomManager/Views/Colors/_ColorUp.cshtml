

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
        <h4 class="modal-title">Cập nhật màu</h4>
    </div>
    <div class="modal-body">
        @if (Model != null)
        {
            <div class="form-group">
                <label>Color code<code>(*)</code></label>
                <input type="text" class="form-control" id="ColorCodeUp" name="ColorCodeUp" placeholder="Color code" value="@Model.ColorCode" readonly>
            </div>
            <div class="form-group">
                <label>Color name<code>(*)</code></label>
                <input type="text" class="form-control" id="ColorNameUp" name="ColorNameUp" placeholder="Color name" value="@Model.ColorName">
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" id="isActiveUp" name="isActiveUp" @(Model.IsActive==true? "checked": "")> Active
                </label>
            </div>
        }
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="ColorUp('@Model.ColorCode')">Save changes</button>
    </div>
</div>

