<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
        <h4 class="modal-title">Product Edit</h4>
    </div>
    <div class="modal-body">
        @if (Model != null)
        {
            <div class="form-group">
                <label>Product code<code>(*)</code></label>
                <input type="text" class="form-control" id="ProductCodeUp" name="ProductCodeUp" placeholder="Product code" value="@Model.ProductCode" readonly>
            </div>
            <div class="form-group">
                <label>Step name<code>(*)</code></label>
                <input type="text" class="form-control" id="ProductNameUp" name="ProductNameUp" placeholder="Product name" value="@Model.ProductName">
            </div>

            <div class="checkbox">
                <label>
                    <input type="checkbox" id="isActiveUp" name="isActiveUp" @(Model.IsActive == true ? "checked" : "")> Active
                </label>
            </div>           

        }
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" onclick="ProductUp('@Model.ProductCode')">Save changes</button>
    </div>
</div>